-- Function to raise the turtle 3 blocks up
function riseUp(levels)
    for i = 1, levels do
        turtle.up()
        print("Rising up, current level: " .. i)
    end
end

-- Function to determine facing direction
function determineDirection()
    local startX, startY, startZ = gps.locate(5)
    turtle.forward()
    local newX, newY, newZ = gps.locate(5)
    
    local initialFacing = ""
    
    -- Determine initial facing direction
    if newX > startX then
        initialFacing = "East"
    elseif newX < startX then
        initialFacing = "West"
    elseif newZ > startZ then
        initialFacing = "South"
    elseif newZ < startZ then
        initialFacing = "North"
    end
    
    turtle.back() -- Move back to original position
    print("Determined initial facing direction: " .. initialFacing)
    
    return initialFacing -- Return the direction as a string
end

function goToDock(xDock, yDock, zDock)
    local x, y, z = gps.locate(5)
    print("Current location: X=" .. x .. ", Y=" .. y .. ", Z=" .. z)
    local direction = determineDirection()
    print("Initial facing direction: " .. direction)
    os.sleep(2)  -- Waiting for 2-3 seconds before moving

    -- Turn to face the correct direction for X-axis movement
    if xDock > x then
        while direction ~= "East" do 
            turtle.turnRight()
            direction = determineDirection()
            print("Turning right to face East")
        end
    elseif xDock < x then
        while direction ~= "West" do
            turtle.turnRight()
            direction = determineDirection()
            print("Turning right to face West")
        end
    end

    -- Move along the X-axis
    while x ~= xDock do
        turtle.forward()
        x, _, _ = gps.locate(5)
        print("Moving along X-axis, current position: X=" .. x)
    end

    -- Turn to face the correct direction for Z-axis movement
    if zDock > z then
        while direction ~= "South" do 
            turtle.turnRight()
            direction = determineDirection()
            print("Turning right to face South")
        end
    elseif zDock < z then
        while direction ~= "North" do
            turtle.turnRight()
            direction = determineDirection()
            print("Turning right to face North")
        end
    end

    -- Move along the Z-axis
    while z ~= zDock do
        turtle.forward()
        _, _, z = gps.locate(5)
        print("Moving along Z-axis, current position: Z=" .. z)
    end

    -- Move along the Y-axis to the docking level
    while y ~= yDock do
        if y < yDock then
            turtle.up()
            print("Moving up along Y-axis")
        elseif y > yDock then
            turtle.down()
            print("Moving down along Y-axis")
        end
        _, y, _ = gps.locate(5)
        print("Current Y position: " .. y)
    end

    -- Face North when arrived at the docking station
    while direction ~= "North" do
        turtle.turnLeft()
        direction = determineDirection()
        print("Turning left to face North")
    end

    print("Arrived at docking station: X=" .. xDock .. ", Y=" .. yDock .. ", Z=" .. zDock)
    print("Facing North")
end

-- Example execution
goToDock(-337, 64, -16)

-- Main execution
riseUp(3)
determineDirection()

-- Function to raise the turtle 3 blocks up
function riseUp(levels)
    for i = 1, levels do
        turtle.up()
    end
end

-- Function to determine facing direction
function determineDirection()
    local startX, startY, startZ = gps.locate(5)
    print("Initial position: X=" .. startX .. ", Y=" .. startY .. ", Z=" .. startZ)

    -- Move forward and check coordinates
    turtle.forward()
    local newX, newY, newZ = gps.locate(5)
    print("Position after moving forward: X=" .. newX .. ", Y=" .. newY .. ", Z=" .. newZ)

    -- Determine if X or Z has changed and print facing direction
    if newX ~= startX then
        if newX > startX then
            print("Initially facing East")
        else
            print("Initially facing West")
        end
    elseif newZ ~= startZ then
        if newZ > startZ then
            print("Initially facing South")
        else
            print("Initially facing North")
        end
    end

    -- Move back to original position
    turtle.back()

    -- Turn left and move forward to check again (optional verification)
    turtle.turnLeft()
    print("Turned left.")
    turtle.forward()
    local checkX, checkY, checkZ = gps.locate(5)
    print("Position after turning left and moving forward: X=" .. checkX .. ", Y=" .. checkY .. ", Z=" .. checkZ)
    turtle.back()

    -- Determine and print new facing direction after turn
    if checkX ~= newX then
        if checkX > newX then
            print("Now facing East")
        else
            print("Now facing West")
        end
    elseif checkZ ~= newZ then
        if checkZ > newZ then
            print("Now facing South")
        else
            print("Now facing North")
        end
    end

    turtle.turnRight() -- Realign to original facing before the check
end

-- Main execution
riseUp(3)
determineDirection()
